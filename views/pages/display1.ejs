<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <title>user page</title>
        <style>
            .container{
                margin-top: 60px;
                margin-left: 40%;
                width:25%;
            }
.card:hover{
    transform: scale(1.05);
    box-shadow: 0 10px 20px rgba(0,0,0,.12), 0 4px 8px rgba(0,0,0,.06);
}
            #one
            {
               
                height:70px;
                background-color: rgb(47, 44, 44);
            }
            #t{
                color:white;
                margin-top: 20px;
            }
            #two
            {
                text-align: center;
                float: left;
                width: 45%;
                height:70px;
                line-height:70px;
            }
            #three
            {
                text-align: center;
                float:right;
                width:45%;
                height: 70px;
                line-height:70px;
                
            } 
            a{
                color:black;
                text-decoration: none;
                margin-left:30px ;
                margin-right: 30px;
                border-radius:10px;
                background-color:transparent;
            }
            body{
                background-color: azure;
            }
            .card{
                background-color: rgb(246, 243, 240);

            }

</style>
    </head>
    <body>
        <div id="one">
            <div id="two">
                <a href="/work" style="color:white">work page</a>

            </div>
            <div id="three" >
                    <a href="/profile" style="color:white">profile</a>
                    <a href="/add" style="color:white">add-todo</a> 
                    <a href="/logout" style="color:white"> logout</a> 
            </div>
        </div>
        <div class="container">
            
            <% if(action == 'add') { %>
                <form action='/add' method="POST" >
                
                    <div class="card">
                        <div class="card-header">Add TO-Do</div>
                        <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>todo</label>
                                            <input type="text" name="todo" id="todo" class="form-control" />
                                        </div>
                                    </div>
                                <div class="mb-3">
                                    <input type="submit" name="submit_button" class="btn btn-primary" value="Add" />
                                </div>
                                </div>
                        </div>
                    </div>
            </form>
            <% } else if (action =="profile") { %>
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">Your profile</div>
                        </div>
                    </div>
                    <div class="card-body" >
                        <table class="table table-responsive">
                            <%
                            if(sampleData.length > 0){
                                sampleData.forEach(function(data){  
                            %>
                              <tr><td>
                                <div class="card">
                                 <div class="card-body">
                                        <%= data['name'] %><br>
                                        <%= data['email'] %><br>
                                        <%= data['gender'] %><br>
                                        <%= data['phno'] %><br>
                                        <%= data['pwd'] %><br>
                                        <a href="/update" class="btn btn-success btn-sm float-end">update</a>
                                    </div>
                        </div>
                    </td>
                              </tr>
                            <% });
                            }
                            else {
                            %>
                            <tr>
                                <td colspan="5">No Data Found</td>
                            </tr>
                            <%
                            }
                            %>
                        </table>
                </div>
                </div>
            
            <%  } else { %>   
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">Your To-Do's</div>  
                        </div>
                    </div>
                    <div class="card-body" >
                            <table class="table table-responsive">
                                <%
                                if(sampleData.length > 0){
                                    sampleData.forEach(function(data){  
                                %>
                                  <tr><td>
                                    <div class="card">
                                     <div class="card-body">
                                        <% if(data['status']==1)
                                        { %>
                                           <s> <%= data['todo'] %></s>&ensp;
                                           <s><%= data['time'] %></s>&ensp;
                                           <s><%= data['date'] %></s><br>
                                           <a href="/delete/<%= data['id'] %>" class="btn btn-danger btn-sm float-end">Delete</a>   
                                        <% } 
                                         else
                                        { %>
                                            <%= data['todo'] %>&ensp;
                                            <%= data['time'] %>&ensp;
                                            <%= data['date'] %><br>
                                            <a href="/delete/<%= data['id'] %>" class="btn btn-danger btn-sm float-end">Delete</a>   
                                            <a href="/done/<%= data['id'] %>" class="btn btn-success btn-sm float-end">done</a>
                                        <% } %>  
                                        </div>
                            </div>
                        </td>
                                  </tr>
                                <% });
                                }
                                else {
                                %>
                                <tr>
                                    <td colspan="5">No Data Found</td>
                                </tr>
                                <%
                                }
                                %>
                            </table>
                    </div>
                </div>
                <% } %>
        </div>
   Â </body>
</html>